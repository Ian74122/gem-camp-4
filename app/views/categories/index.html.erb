<h1>Category List</h1>

<ul>
  <% @categories.each do |category| %>
    <li>
      <%= category.name %>
      <%= link_to :edit, edit_category_path(category) %>
      <%= button_to :destroy, category_path(category), method: :delete %>
    </li>
  <% end %>
</ul>

<%= link_to :post, posts_path %>
<%= link_to :new, new_category_path %>